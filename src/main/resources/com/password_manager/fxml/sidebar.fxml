      <MFXButton maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#showPayments" text="Payments" VBox.vgrow="ALWAYS" />
      <MFXButton maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#showTrash" text="Trash" VBox.vgrow="ALWAYS" />
